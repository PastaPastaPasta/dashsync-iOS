disable-rules:
  - LongLine
  - ShortVariableName
  - UnnecessaryElseStatement
  - BitwiseOperatorInConditional
rule-configurations:
  - key: CYCLOMATIC_COMPLEXITY
    value: 20
  - key: NPATH_COMPLEXITY
    value: 512
  - key: LONG_VARIABLE_NAME
    value: 100
  - key: TOO_MANY_METHODS
    value: 100
  - key: TOO_MANY_PARAMETERS
    value: 30
  - key: LONG_METHOD
    value: 200
  - key: NCSS_METHOD
    value: 128
output: oclint.xml
report-type: xml
max-priority-1: 0
max-priority-2: 200
max-priority-3: 300
enable-clang-static-analyzer: false
